
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/logoo">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Espace administrateur"
        android:textSize="30sp"
        android:textStyle="bold" />


    <!-- Titre -->


    <!-- Texte cliquable pour afficher la liste des contrats -->
    <TextView
        android:id="@+id/textgestionContrats"
        android:layout_width="372dp"
        android:layout_height="67dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:drawableStart="@drawable/contra"
        android:gravity="center"
        android:onClick="gestionContrats"
        android:text="Gérer les Contrats"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <!-- Texte cliquable pour afficher l'historique des paiements -->
    <TextView
        android:id="@+id/textHistoriquePaiement"
        android:layout_width="378dp"
        android:layout_height="64dp"
        android:clickable="true"
        android:drawableStart="@drawable/hist"
        android:gravity="center"
        android:onClick="afficherHistoriquePaiement"
        android:text="Historique de Paiement"
        android:textColor="@color/black"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/histori"
        android:layout_width="372dp"
        android:layout_height="53dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:drawableStart="@drawable/hist"
        android:onClick="historiqueReclamations"
        android:text="      Historique des réclamations"
        android:textColor="@color/black"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/textgestiondeprofils"
        android:layout_width="378dp"
        android:layout_height="64dp"
        android:clickable="true"
        android:drawableStart="@drawable/g"
        android:gravity="center"
        android:onClick="gestiondeprofils"
        android:text="Gérer des profils"
        android:textColor="@color/black"
        android:textSize="20sp" />

</LinearLayout>
