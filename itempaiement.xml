<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/num_adherenttextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="num_adherent:"
        android:textSize="16sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/montanttextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="montant:"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mode_depaiementview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="mode de paiement"
        android:textSize="16sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/refeview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="ref_paiement:"
        android:textSize="16sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/etatview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Etat:"
        android:textSize="16sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/date_expiration_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Date d'expiration:"
        android:textSize="16sp"
        android:textStyle="bold" />


</LinearLayout>
