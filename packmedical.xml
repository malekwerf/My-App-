<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/logoo"
    android:orientation="vertical">

    <!-- activity_pack_medical.xml -->


    <TextView
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Pack medical"
        android:textSize="30sp"
        android:textStyle="bold" />





        <!-- Champ Numéro d'adhérent -->

        <!-- Spinner pour le choix de la couverture médicale -->
        <Spinner
            android:id="@+id/couvertureSpinner"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:hint="Choisir la couverture médicale" />

        <!-- Bouton de soumission -->
        <Button
            android:id="@+id/submitbutton"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:onClick="validerPackMedical"
            android:text="Suivant"
            android:textColor="@color/black"
            android:textSize="24sp" />

    </LinearLayout>

