<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/logoo"
    android:padding="16dp">

    <TextView
        android:layout_width="389dp"
        android:layout_height="148dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Inscription"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/nomEditText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/nom"
        android:hint="Nom "
        android:textColor="#151515" />

    <EditText
        android:id="@+id/userEditText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/user"
        android:hint="Prenom"
        android:textColor="#151515" />


    <EditText
        android:id="@+id/addressEditText"
        android:layout_width="387dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/emaill"
        android:hint="E-mail" />

    <EditText
        android:id="@+id/phoneNumberEditText"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/tell"
        android:hint="Numéro de téléphone"
        android:hyphenationFrequency="normal" />

    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="380dp"
        android:layout_height="76dp"
        android:drawableStart="@drawable/password"
        android:hint="mot de pass"
        android:hyphenationFrequency="normal" />

    <Button
        android:id="@+id/signUpButton"

        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginTop="16dp"
        android:onClick="signUp"
        android:text="S'inscrire"
        android:textColor="#100F0F"
        android:textSize="24sp" />

</LinearLayout>
